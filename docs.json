{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Pierview AI",
  "description": "AI visibility platform for brands",
  "colors": {
    "primary": "#2b7fff",
    "light": "#2b7fff",
    "dark": "#2b7fff"
  },
  "favicon": "/favicon.svg",
  "styling": {
    "eyebrows": "section",
    "latex": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book-open",
        "groups": [
          {
            "group": "Get Started",
            "icon": "rocket",
            "pages": [
              "index",
              "quickstart",
              {
                "group": "Main metrics",
                "expanded": false,
                "pages": [
                  "main-metrics/visibility",
                  "main-metrics/sentiment",
                  "main-metrics/position"
                ]
              }
            ]
          },
          {
            "group": "Set up Your Project",
            "icon": "wrench",
            "pages": [
              "core-features/monitoring/prompts",
              "core-features/monitoring/brands",
              "playbooks/outrank-competitor-perplexity"
            ]
          },
          {
            "group": "Interpret Your Results",
            "icon": "chart-line",
            "pages": [
              "core-features/analysis/citations",
              "core-features/actions/reports",
              "core-features/analysis/sources"
            ]
          },
          {
            "group": "Take Action",
            "icon": "lightbulb",
            "pages": [
              "core-features/actions/optimization"
            ]
          },
          {
            "group": "Misc",
            "icon": "settings",
            "pages": [
              "essentials/navigation",
              "playbooks/overview",
              "misc/video-library"
            ]
          },
          {
            "group": "Integrations",
            "icon": "plug",
            "pages": [
              "integrations/looker-studio"
            ]
          }
        ]
      },
      {
        "tab": "Customer API",
        "icon": "square-terminal",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/endpoints"
            ]
          }
        ]
      },
      {
        "tab": "Support",
        "groups": [
          {
            "group": "Help",
            "pages": [
              "support/troubleshooting",
              "support/faq",
              "support/glossary",
              "support/security-privacy",
              "support/changelog"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/pierview-icon-updated.png",
    "dark": "/logo/pierview-icon-updated.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@pierview.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.pierview.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
}
